# OAuth 2.0 Configuration (Auth0)
OAUTH_DOMAIN=your-tenant.auth0.com
OAUTH_AUDIENCE=https://api.mcp-server.com
OAUTH_CLIENT_ID=your_client_id_here
OAUTH_CLIENT_SECRET=your_client_secret_here
OAUTH_TOKEN_URL=https://your-tenant.auth0.com/oauth/token
OAUTH_JWKS_URL=https://your-tenant.auth0.com/.well-known/jwks.json
OAUTH_ALGORITHMS=RS256
OAUTH_ISSUER=https://your-tenant.auth0.com/

# OAuth 2.1 Security Settings
OAUTH_ACCESS_TOKEN_EXPIRY=900
OAUTH_REFRESH_TOKEN_EXPIRY=604800
OAUTH_REQUIRE_PKCE=true
OAUTH_ALLOW_IMPLICIT=false

# OpenWeatherMap API
OPENWEATHER_API_KEY=your_api_key_here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
OPENWEATHER_TIMEOUT=10

# File Operations Security
ALLOWED_FILE_PATHS=/app/data,/app/uploads,/tmp/mcp
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.txt,.json,.csv,.md

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000

# FastMCP Transport
TRANSPORT_MODE=sse

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=3600

# Security
SECRET_KEY=generate-random-64-char-string-here
HTTPS_ONLY=false

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///./mcp_server.db
# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/mcp_db
DATABASE_ECHO=false

# User Data Storage
USER_DATA_DIR=user_data
